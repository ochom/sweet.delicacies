<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lysofts.gordion">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AdminSearchActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name=".SearchActivity" />
        <activity android:name=".FavoritesActivity" />
        <activity android:name=".CheckOut" />
        <activity
            android:name=".AdminAddProduct"
            android:parentActivityName=".AdminPanel" />
        <activity
            android:name=".AdminPanel"
            android:parentActivityName=".Dashboard">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".Signup"
            android:parentActivityName=".SplashActivity" />
        <activity
            android:name=".ProfileActivity"
            android:parentActivityName=".Dashboard" />
        <activity
            android:name=".LoginActivity"
            android:parentActivityName=".SplashActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Dashboard" />
        <activity
            android:name=".Products"
            android:label="@string/app_name"
            android:parentActivityName=".Dashboard" />
        <activity
            android:name=".ProductDetail"
            android:parentActivityName=".Products" />
    </application>

</manifest>